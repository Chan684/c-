#include <iostream>
using namespace std;
int checkPrime(int n)
{    int isPrime=1;
    int m=n/2;
    for(int j=2;j<=m;j++){
        if(n%j==0){
            isPrime=0;
            
    } }
    if(isPrime==1|| n==2){
        return 1;
    }else{
    return 0;
}
}

int main(){
    int counter=2;
    for(int i=1;i<5;i++){
                for(int j=1;j<5-i;j++){
                    cout<<" ";
                }
                
            for(int j=1;j<=i;j++){
    
                while(!checkPrime(counter)){
                counter++;
                }
                cout<<counter<<" ";
                counter++;
}cout<<endl;
}return 0;
}
