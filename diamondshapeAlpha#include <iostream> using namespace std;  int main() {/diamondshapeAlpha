#include <iostream>
using namespace std;

int main()
{ // loop to print upper triangle
    int n=5;
    for(int i=1;i<=n;i++){
        for(int k=0;k<n-i;k++){
            cout<<" ";
        }
        int no_of_char=2*i-1;
        for(int j=0;j<no_of_char;j++){
        cout<<(char)('A'+j);
    }cout<<endl;
}
    
    // loop to print upper triangle
    for(int line = n+1;n<2*n-1;line++){
        int no_of_space=line-n;
        for(int j=0;j<no_of_space;j++){
            cout<<" ";
        }
        int no_of_chars=2*(2*n - line) -1;
        for(int a = 0;a<no_of_chars;a++){
        cout<<(char)('A'+a);
    }
    }cout<<"\n";
    return 0;
}
